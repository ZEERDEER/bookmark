{
  "manifest_version": 3,
  "name": "Bookmark",
  "version": "1.0",
  "description": "便捷的 Chrome 书签",
  "permissions": [
    "bookmarks",
    "storage",
    "favicon",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}